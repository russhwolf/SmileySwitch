<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/checked"
        android:drawable="@drawable/mouth_checked"
        android:state_checked="true"/>

    <item
        android:id="@+id/normal"
        android:drawable="@drawable/mouth_normal"/>

    <transition
        android:fromId="@id/normal"
        android:toId="@id/checked"
        android:drawable="@drawable/mouth_normal_to_checked"/>
    <transition
        android:fromId="@id/checked"
        android:toId="@id/normal"
        android:drawable="@drawable/mouth_checked_to_normal"/>

</animated-selector>
